<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkRate"
        xmlns:ViewModel="clr-namespace:ParkRate.ViewModel" x:Class="ParkRate.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="569.39" Width="693.171">
    <Window.DataContext>
        <ViewModel:ParkRateViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox Margin="135,10,0,0" TextWrapping="Wrap" Text="{Binding ArrivalTimeStr, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" x:Name="ArrivalTimeTxt" HorizontalAlignment="Left" Width="65" />
        <Label Content="ora di arrivo&#xA;" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Height="23" Width="111"/>
        <TextBox Margin="135,85,0,0" TextWrapping="Wrap" Text="{Binding ArrivalDateStr, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" x:Name="ArrivalDateTxt" HorizontalAlignment="Left" Width="65"/>
        <Label Content="giorno di arrivo&#xA;" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="111"/>
        <Label Content="{Binding RateValue}" Margin="282,5,0,0" x:Name="RateValueLbl" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="92"/>
        <Label Content="Immettere l'ora in formato MMss, senza spazi" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="267" Foreground="{Binding ArrivalTimeColor}"/>
        <Label Content="Immettere il giorno in formato ggmmaaaa, senza spazi" Margin="10,108,168.4,0" VerticalAlignment="Top" Foreground="{Binding ArrivalTimeColor}" Background="White"/>

        <TextBox Margin="135,158,0,0" TextWrapping="Wrap" Text="{Binding LeaveTimeStr, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" x:Name="LeaveTimeTxt" HorizontalAlignment="Left" Width="65" />
        <Label Content="ora di partenza" HorizontalAlignment="Left" Margin="10,153,0,0" VerticalAlignment="Top" Height="23" Width="111"/>
        <TextBox Margin="135,233,0,0" TextWrapping="Wrap" Text="{Binding LeaveDateStr, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" x:Name="LeaveDateTxt" HorizontalAlignment="Left" Width="65"/>
        <Label Content="giorno di partenza" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top" Width="111"/>
        <Label Content="Immettere l'ora in formato MMss, senza spazi" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" Width="267" Foreground="{Binding LeaveTimeColor}"/>
        <Label Content="Immettere il giorno in formato ggmmaaaa, senza spazi" Margin="10,256,168.4,0" VerticalAlignment="Top" Foreground="{Binding LeaveTimeColor}" Background="White"/>
        <Label Content="{Binding ArrivalDateTimeStr}" HorizontalAlignment="Left" Margin="346,61,0,0" VerticalAlignment="Top" Height="27" Width="120"/>
        <Label Content="{Binding LeaveDateTimeStr}" HorizontalAlignment="Left" Margin="346,210,0,0" VerticalAlignment="Top" Height="27" Width="120"/>
        <ListView ItemsSource="{Binding ExampleList}" HorizontalAlignment="Left" Height="272" Margin="471,10,0,0" VerticalAlignment="Top" Width="161">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tempo di sosta" DisplayMemberBinding="{Binding Title}"></GridViewColumn>
                    <GridViewColumn Header="Valore" DisplayMemberBinding="{Binding Value}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
